= form_for @loaned_item do |f|
  - if @loaned_item.errors.any?
    #error_explanation
      %h2= "#{pluralize(@loaned_item.errors.count, "error")} prohibited this loaned_item from being saved:"
      %ul
        - @loaned_item.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title, "Item Name"
    = f.text_field :title
  .field
    = f.label :friend_name
    = f.text_field :friend_name
  .field
    = f.label :loan_date
    = f.date_field :loan_date
  .actions
    = f.submit 'Save'
